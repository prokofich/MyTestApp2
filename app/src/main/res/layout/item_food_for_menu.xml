<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_item_food_cs"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="160sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/id_item_food_iv"
            android:layout_marginBottom="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            android:layout_height="160sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:gravity="center|start"
            android:textColor="@color/black"
            android:text="Ветчина и грибы"
            android:textSize="21sp"
            android:textStyle="bold"
            android:id="@+id/id_item_food_tv_name"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/id_item_food_iv"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:gravity="start|center"
            android:textSize="14sp"
            android:padding="3sp"
            android:textColor="#9c9797"
            android:textStyle="bold"
            android:text="описание..."
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:id="@+id/id_item_food_tv_desc"
            app:layout_constraintStart_toEndOf="@id/id_item_food_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/id_item_food_tv_price"
            app:layout_constraintTop_toBottomOf="@id/id_item_food_tv_name"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="от 345р"
            android:textColor="#cf3227"
            android:background="@drawable/background_tv_price"
            android:id="@+id/id_item_food_tv_price"
            android:textSize="18sp"
            android:layout_marginTop="10sp"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintBottom_toBottomOf="@id/id_item_food_iv"
            app:layout_constraintEnd_toEndOf="@id/id_item_food_tv_desc"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#757171"
        app:layout_constraintTop_toBottomOf="@id/id_item_food_cs"/>



</androidx.constraintlayout.widget.ConstraintLayout>